{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@/public/*": [
        "./public/*"
      ],
      "@/assets/*": [
        "./src/shared/assets/*"
      ],
      "@/*": [
        "./src/*"
      ],
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "./src",
    "vite.config.*",
    "vitest.setup.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
